<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".fragments.VersetPageFragment">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:elevation="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="5dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="3dp">

            <TextView
                android:id="@+id/tvIdVerset"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="120"
                android:text="12"
                android:textAlignment="textEnd"
                android:textColor="@color/black"
                android:textSize="10dp" />

            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="5"
                android:gravity="center"
                android:text="رقم الآية"
                android:textColor="#256F98"
                android:textSize="10sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvNameSourat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="60"
                android:text="إسم السورة"
                android:textAlignment="center"
                android:textColor="#256F98"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvIdSourat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="120"
                android:text="12"
                android:textAlignment="textEnd"
                android:textColor="@color/black"
                android:textSize="10dp" />

            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="6"
                android:gravity="center"
                android:text="رقم السورة"
                android:textColor="#256F98"
                android:textSize="10sp"
                android:textStyle="bold" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingVertical="40dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="50dp"
                tools:ignore="MissingConstraints">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="10sp"
                    android:layout_marginTop="10sp"
                    android:elevation="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvTextAr"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="3dp"
                            android:textAlignment="center"
                            android:textColor="#256F98"
                            android:textSize="13dp" />

                        <TextView
                            android:id="@+id/tvTextAn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5sp"
                            android:padding="3dp"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="13dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#256F98"
                            android:orientation="horizontal"
                            android:paddingHorizontal="10sp">

                            <TextView
                                android:id="@+id/tvNbrMots"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:paddingHorizontal="10sp"
                                android:text="15"
                                android:textAlignment="textStart"
                                android:textColor="@android:color/darker_gray"
                                android:textSize="11dp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="عدد الكلمات"
                                android:textAlignment="textStart"
                                android:textColor="@color/white"
                                android:textSize="12dp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tvTextAn2"
                                android:layout_width="wrap_content"
                                android:layout_height="20dp"
                                android:layout_weight="2"
                                android:text="مكية"
                                android:textAlignment="textStart"
                                android:textColor="@color/white"
                                android:textSize="13dp"
                                android:textStyle="bold" />
                        </LinearLayout>


                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50sp"
                    android:background="#BFFFFFFF"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="3dp">

                    <ImageView
                        android:id="@+id/shareBtn"
                        android:layout_width="28dp"
                        android:layout_height="26dp"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:src="@drawable/ic_share" />

                    <ImageView
                        android:id="@+id/btn_fav"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:src="@drawable/ic_bookmark" />

                    <ImageView
                        android:id="@+id/firebase_btn"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_star" />

                    <ImageView
                        android:id="@+id/btnImage"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:src="@drawable/ic_open_book" />

                    <ImageView
                        android:id="@+id/btn_audio"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:src="@drawable/ic_play" />

                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:padding="3dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="30dp"
                        android:orientation="vertical"
                        android:paddingBottom="20dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:paddingHorizontal="15dp">

                            <Spinner
                                android:id="@+id/ListContact"
                                android:layout_width="250dp"
                                android:layout_height="28dp"
                                android:layout_gravity="center"
                                android:background="@drawable/gradient_spinner" />

                            <TextView
                                android:id="@+id/tafsir"
                                android:layout_width="80dp"
                                android:layout_height="28dp"
                                android:background="#256F98"
                                android:paddingVertical="3dp"
                                android:text=" المفسر"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:textSize="15dp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="10dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="10dp"
                            android:elevation="1dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="#256F98"
                                    android:paddingHorizontal="10dp"
                                    android:text=" التفسير"
                                    android:textColor="@color/white"
                                    android:textSize="15dp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/tafsirSection"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingHorizontal="10dp"
                                    android:paddingVertical="10dp"
                                    android:textColor="@color/black"
                                    android:textSize="13dp" />
                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>


            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout >